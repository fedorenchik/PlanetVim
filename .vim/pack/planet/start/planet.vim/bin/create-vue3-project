#!/bin/bash

prj_name="$1"
shift

if which vue >&/dev/null; then
	#vue found
	vue create -p __default_vue_3__ --skipGetStarted "$prj_name"
	exit
fi

if which npm >&/dev/null; then
	mkdir "$prj_name"
	cd "$prj_name"
	npm install @vue/cli
	vue create -p __default_vue_3__ --merge --skipGetStarted .
	cd -
	exit
fi

# neither vue nor npm found, fallback to copy default files (may be outdated)
BIN_DIR="$(readlink -f $(dirname $0))"
"$BIN_DIR/copy-template" "vue-3-app" "$prj_name"
